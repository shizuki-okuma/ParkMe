<div class="container" style="height: 600px;">
  <div class="row">
    <div class="col-sm-12">
      <%= render 'searches/search' %>

      <table class="table table-borderless mb-0">
        <tbody>
          <% @parkings.each do |parking| %>
            <tr class="clickable-row" onclick='window.location="/customers/parkings/<%= parking.id %>"' role="link">
              <td><%= parking.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>