<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 mx-auto">
      <h3>レンタル履歴一覧</h3>
      <table class="table">
        <thead>
          <tr class="table-active">
            <th>レンタルID</th>
            <th>レンタル日</th>
            <th>駐車場名</th>
            
          </tr>
        </thead>

        <tbody>
          <% @rentals.each do |rental| %>
          <tr>
            <td><%= rental.id %></td>
            <td><%= link_to  admins_rental_path(rental) do %>
            <%= rental.rental_at.strftime("%Y年%-m月%-d日") %>
            <% end %>
            </td>
            <td><%= rental.parking.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @rentals %>
    </div>
  </div>
</div>