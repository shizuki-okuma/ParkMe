<% if customer.is_deleted %>
  <%= link_to admins_customer_statuses_path(customer), method: :post, remote: true do %><span class="text-secondary font-weight-bold">無効</span><% end %>
<% else %>
  <%= link_to admins_customer_statuses_path(customer), method: :delete, remote: true do %><span class="text-success font-weight-bold">有効</span><% end %>
<% end %>