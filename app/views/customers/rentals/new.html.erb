<div class="container">
  <div class="row">

    <div class="mt-3">
      <h3>注文情報入力</h3>
    </div>
    </div>
    <div class="row">
      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
        <div class="mt-2">
          <div>
            <h5><strong>支払い方法</strong></h5>
          </div>
        <div class="ml-4">
          <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method_credit_card, "クレジットカード" %><br>
          <%= f.radio_button :payment_method, "transfer" %>
          <%= f.label :payment_method_transfer, "銀行振込" %><br>
        </div>
        
        <div>
            <h5><strong>ご自身の住所確認</strong></h5>
        </div>
        <div class="ml-4">
          <table>
            <tr>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td><br>
            〒<td><%= @customer.zip_code %></td>
              <td><%= @customer.address %></td>
              <td><%= link_to "編集する", customers_edit_path(@customer), class: 'btn btn-success' %></td>
            </tr>
          </table>
        </div>
      </div>
  </div>
  <div class="text-center mt-4 mb-5">
  <!--注文情報確認画面へ-->
    <%= f.submit "確認画面へ進む", confirm_rental_path, class: "btn btn-primary"%>
  </div>
    <% end %>
</div>
