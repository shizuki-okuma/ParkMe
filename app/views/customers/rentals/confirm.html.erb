<div class="container my-4">
  
  <div class="row my-4">
  <h1>注文情報確認</h1>
  </div>
  
  <div class="row">
    <div class=col-8>
      <table class='table table-bordered'>
        
        <thead class="thead-light">
          <tr><th>駐車場名</th><th>単価（税込）</th><th>台数</th><th>小計</th></tr>
        </thead>
        
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.parking.name %>
              </td>
              <td><%= customer.parking.with_tax_price %>円</td>
              <td><%= customer.parking_amount %>台</td>
              <td><%= customer.subtotal %>円</td>
            </tr>
            <% end %>
            <% @total+=rental.subtotal %>
        </tbody>
        
      </table>
    </div>
  </div>
  
  <div class='row'>
    <h5>支払い方法</h5>
    <%= @rental.payment_method_i18n %>
  </div>
  
  <div class='row'>
    <h5>ご自身の住所</h5>
    〒<%= @rental.zip_code %>
    <%= @rental.address %>
     <%= @rental.name %>
  </div>
  
    <%= form_with model:@rental ,url: thanks_rentals_path, method: :post do |f| %>
      <%= f.hidden_field :zip_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :total_payment, value: @total+@rental.shopping_cost %>
      <%= f.hidden_field :payment_method %>
      
  <div class='row'>
      <%= f.submit "注文を確定する", class:'btn btn-success' %>
      <% end %>
  </div>

  </div>

