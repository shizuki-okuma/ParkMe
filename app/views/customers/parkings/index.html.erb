<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="col-sm-mb-4"><strong>駐車場一覧</strong></h3>
      <!--検索フォーム-->
      <div><%= render 'searches/search' %></div>
        <% @parkings.each do |parking| %>
          <table class="table table-borderless mb-0">
            <tr class="clickable-row" onclick='window.location="/customers/parkings/<%= parking.id %>"' role="link">
              <td><%= parking.name %></td>
            </tr>
          </table>
        <% end %>
      
      <div class="col mb-10">
        <iframe src="<%= ENV['MAP_URL'] %>" width="640" height="480"></iframe>
      </div>
    </div>
  </div>
</div>
  