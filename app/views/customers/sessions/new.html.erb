<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-12 px-sm-0 offset-sm-1">
      <h3>レンタル会員ログイン</h3>
      
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
            <!--ブレークポイントはsm(576px以上、768px未満)-->
            <div class="col-sm-3 px-sm-0 mb-3 offset-sm-1">
              <%= f.label "メールアドレス" %>
            </div>
            <div class="col-sm-3 px-sm-0">
              <!--placeholderで例文指定、sizeでサイズ指定-->
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" , placeholder: "sample@example.com"%>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3 px-sm-0 offset-sm-1">
              <%= f.label "パスワード" %>
            </div>
            <div class="col-sm-3 px-sm-0">
              <%= f.password_field :password, autocomplete: "current-password", :size=>"40" %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5 px-sm-0 offset-sm-4">
              <%= f.submit "ログイン",  class:"btn btn-primary px-4 mt-3 mb-5" %>
            </div>
          </div>
        <% end %>
        
    </div>
  </div>
</div>