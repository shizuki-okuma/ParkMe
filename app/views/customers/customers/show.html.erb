<div class="container">
  <h3>マイページ</h3>
  
  <div class="row my-4">
    <h3>登録情報</h3>
    
    <% if current_customer.email != 'guest@example.com' %>
    <div class='col-10'>
      <%= link_to "編集する", edit_customers_customer_path(current_customer), class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
  
   <div class='col-10'>
    <table class= "table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>名前</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
        <th>カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
            <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
      </thead>
    </table>
  </div>
  <div class="row my-3">
    <h3 >レンタル履歴</h3>
  </div>
      <div class='col-10'>
       <table class= "table table-bordered">
         <% @rentals.each do |rental| %>
          <tr>
            <td><%= rental.id %></td>
            <td><%= rental.rental_at.strftime("%Y年%-m月%-d日")%></td>
            <td><%= rental.parking.name %></td>
            <td><%= link_to "詳細", customers_parking_path(rental.id), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>