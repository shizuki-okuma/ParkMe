<div class="container">
  <div class="row mt-10 justify-content-center">
    <div class="col">
    <h3>提供会員情報編集</h3>
    <div>
    <div class='col-12 mb-10'>
    <%= form_with model: @provider, url:providers_provider_path(@provider), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :"会員ID", class: "col-4 control-label" %>
        <%= f.label :"#{@provider.id}" %>
      </div>
      <div class="form-group">
        <%= f.label :"氏名", class: "col-2 control-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-3" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-3" %>
      </div>
      <div class="form-group">
        <%= f.label :"フリガナ", class: "col-2 control-label" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-3" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "col-3" %>
      </div>
      <div class="form-group">
        <%= f.label :"郵便番号", class: "col-2 control-label" %>
        <%= f.text_field :zip_code, class: "col-3" %>
      </div>
      <div class="form-group">
        <%= f.label :"住所", class: "col-2 control-label" %>
        <%= f.text_field :address, autofocus: true, class: "col-7" %>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号", class: "col-2 control-label" %>
        <%= f.text_field :phone_number, autofocus: true, class: "col-3" %>
      </div>
      <div class="form-group">
        <%= f.label :"メールアドレス", class: "col-2 control-label" %>
        <%= f.text_field :email, autofocus: true, class: "col-5" %>
      </div>
      <div class="row justify-content-center">
        <%= f.submit "変更を保存", class:'btn btn-lg btn-success' %>
        <%= link_to "退会する", providers_provider_withdraw_path(@provider), class: 'btn btn-danger' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
