<div class="container">
  <div class="row mt-10 justify-content-center">
    <h3>駐車場編集</h3>
  
    <div class="col-10">
      <%= form_with model: @parking,url: providers_parking_path do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th><%= f.label "商品名" %></td>
            <td><%= f.text_field :name, class: "form-control", :placeholder => "商品名" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "郵便番号" %></th>
            <td><%= f.text_field :zip_code, class: "form-control", :placeholder => "000000" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "住所" %></th>
            <td><%= f.text_field :address, class: "form-control", :placeholder => "〇〇県〇〇市〇〇区" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "台数" %></th>
            <td><%= f.text_field :amount, class: "form-control", :placeholder => "1" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "商品説明" %></td>
            <td><%= f.text_area :description, class: "form-control", :placeholder => "ここに説明文を記載してください" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "車種" %></td>
            <td>
              <%= f.collection_check_boxes(:car_model_ids, CarModel.all, :id, :name) do |b| %>
                <%= b.label { b.check_box + b.text } %>
              <% end %>
            </td>
          </tr>
            
          <tr>
            <th><%= f.label '税抜価格' %></td>
            <td>
              <div class="input-group">
                <%= f.text_field :price, class: 'form-control' %>
                <span class="input-group-text">円</span>
              </div>
            </td>
          </tr>
          
          <tr>
            <th><%= f.label "販売ステータス" %></td>
            <td>
              <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, '販売中' %>
              <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, '販売停止中' %>
            </td>
          </tr>
        </tbody>
      </table>
      
      <div class="row justify-content-center">
            <%= f.submit "変更を保存", class:'btn btn-lg btn-success' %>
      </div>
      <% end %>
    </div>
  
  </div>
</div>